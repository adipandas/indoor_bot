<!-- Launch file for the rrt-detector and the assigner -->

<launch>

    <arg name="robot_frame" default="robot_footprint"/>
    <arg name="map_topic" default="/map"/>
    <arg name="global_frame" default="map"/>

    <arg name="info_radius" default="3.0"/>
    
    <arg name="eta" value="1.0"/>
    <arg name="Geta" value="5.0"/>
    <param name="namespace_init_count" value="1"/>

    <node pkg="indoor_bot" type="global_rrt_detector" name="global_detector" output="screen">
        <param name="eta" value="$(arg Geta)"/>
        <param name="map_topic" value="$(arg map_topic)"/>
    </node>
  
    <node pkg="indoor_bot" type="local_rrt_detector" name="local_detector" output="screen">
        <param name="eta" value="$(arg eta)"/>
        <param name="map_topic" value="$(arg map_topic)"/>
        <param name="robot_frame" value="$(arg robot_frame)"/>
    </node>
 
    <node pkg="indoor_bot" type="filter.py" name="filter" output="screen">
        <param name="map_topic" value="$(arg map_topic)"/>
        <param name="info_radius" value="$(arg info_radius)"/> 
        <param name="costmap_clearing_threshold" value="70"/> 
        <param name="goals_topic" value="/detected_points"/>
        <param name="namespace" value=""/> 
        <param name="n_robots" value="1"/>
        <param name="rate" value="100"/>
    </node>
  
    <node pkg="indoor_bot" type="assigner.py" name="assigner" output="screen">
        <param name="map_topic" value="$(arg map_topic)"/>
        <param name="global_frame" value="$(arg global_frame)"/>
        <param name="info_radius" value="$(arg info_radius)"/> 
        <param name="info_multiplier" value="3.0"/> 
        <param name="hysteresis_radius" value="5.0"/> 
        <param name="hysteresis_gain" value="1.0"/> 
        <param name="frontiers_topic" value="/filtered_points"/> 
        <param name="n_robots" value="1"/>
        <param name="namespace" value=""/>
        <param name="delay_after_assignement" value="1.0"/>
        <param name="rate" value="100"/>
    </node>
  
</launch>

